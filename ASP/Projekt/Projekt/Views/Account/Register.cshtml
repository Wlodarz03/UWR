@model Projekt.Models.User

<h2>Rejestracja</h2>
<form method="post" action="@Url.Action("Register", "Account")">
    <div>
        <label>Login:</label>
        <input type="text" name="Username" required />
        @if (ViewData.ModelState["Username"]?.Errors.Count > 0)
        {
            <span style="color: red;">@ViewData.ModelState["Username"].Errors[0].ErrorMessage</span>
        }
    </div>
    <div>
        <label>Hasło:</label>
        <input type="password" name="Password" required />
    </div>
    <button type="submit">Zarejestruj</button>
</form>
